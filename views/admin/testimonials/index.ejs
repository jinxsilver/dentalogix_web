<%- include('../partials/header') %>

<div class="card">
  <div class="card-header">
    <h2>Testimonials</h2>
    <a href="/admin/testimonials/new" class="btn btn-primary">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 18px; height: 18px;"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
      Add Testimonial
    </a>
  </div>
  
  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th>Patient</th>
          <th>Content</th>
          <th>Rating</th>
          <th>Featured</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% testimonials.forEach(function(t) { %>
        <tr>
          <td><strong><%= t.patient_name %></strong></td>
          <td><%= t.content.substring(0, 80) %>...</td>
          <td><%= '⭐'.repeat(t.rating) %></td>
          <td><%= t.featured ? '✓ Yes' : 'No' %></td>
          <td>
            <div class="actions">
              <a href="/admin/testimonials/<%= t.id %>/edit" class="btn btn-secondary btn-sm btn-icon" title="Edit">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
              </a>
              <form action="/admin/testimonials/<%= t.id %>/delete" method="POST" class="delete-form" style="display: inline;">
                <button type="submit" class="btn btn-danger btn-sm btn-icon" title="Delete">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/></svg>
                </button>
              </form>
            </div>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
