<%- include('../partials/header') %>

<div class="card">
  <div class="card-header">
    <h2>Contact Messages</h2>
  </div>
  
  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th>Status</th>
          <th>From</th>
          <th>Subject</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (contacts.length > 0) { %>
          <% contacts.forEach(function(c) { %>
          <tr style="<%= c.read ? '' : 'background: rgba(13, 148, 136, 0.05);' %>">
            <td>
              <% if (!c.read) { %>
                <span class="badge badge-info">New</span>
              <% } else { %>
                <span class="badge badge-success">Read</span>
              <% } %>
            </td>
            <td>
              <strong><%= c.name %></strong><br>
              <span style="font-size: 0.8rem; color: var(--admin-text-light);"><%= c.email %></span>
            </td>
            <td><%= c.subject || '(No subject)' %></td>
            <td><%= new Date(c.created_at).toLocaleDateString() %></td>
            <td>
              <div class="actions">
                <a href="/admin/contacts/<%= c.id %>" class="btn btn-secondary btn-sm btn-icon" title="View">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
                </a>
                <form action="/admin/contacts/<%= c.id %>/delete" method="POST" class="delete-form" style="display: inline;">
                  <button type="submit" class="btn btn-danger btn-sm btn-icon" title="Delete">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/></svg>
                  </button>
                </form>
              </div>
            </td>
          </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="5" style="text-align: center; padding: 3rem;">
              <p style="color: var(--admin-text-light);">No contact messages yet.</p>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
