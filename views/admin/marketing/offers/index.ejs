<%- include('../../partials/header', { title, settings, user, currentPath: '/admin/marketing/offers', unreadCount: 0, newLeadsCount }) %>

<div class="page-header">
  <div>
    <h2>Offers & Promos</h2>
    <p class="text-muted">Create and manage promotional landing pages for your dental practice</p>
  </div>
  <a href="/admin/marketing/offers/new" class="btn btn-primary">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 18px; height: 18px;">
      <line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/>
    </svg>
    New Offer
  </a>
</div>

<!-- Stats Cards -->
<div class="stats-grid" style="margin-bottom: 2rem;">
  <div class="stat-card">
    <div class="stat-icon" style="background: linear-gradient(135deg, #0077B6, #00B4D8);">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20.59 13.41l-7.17 7.17a2 2 0 01-2.83 0L2 12V2h10l8.59 8.59a2 2 0 010 2.82z"/><line x1="7" y1="7" x2="7.01" y2="7"/></svg>
    </div>
    <div class="stat-content">
      <div class="stat-value"><%= stats.total || 0 %></div>
      <div class="stat-label">Total Offers</div>
    </div>
  </div>
  <div class="stat-card">
    <div class="stat-icon" style="background: linear-gradient(135deg, #10B981, #34D399);">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 11-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
    </div>
    <div class="stat-content">
      <div class="stat-value"><%= stats.published || 0 %></div>
      <div class="stat-label">Published</div>
    </div>
  </div>
  <div class="stat-card">
    <div class="stat-icon" style="background: linear-gradient(135deg, #8B5CF6, #A78BFA);">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
    </div>
    <div class="stat-content">
      <div class="stat-value"><%= stats.total_views || 0 %></div>
      <div class="stat-label">Total Views</div>
    </div>
  </div>
  <div class="stat-card">
    <div class="stat-icon" style="background: linear-gradient(135deg, #F59E0B, #FBBF24);">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 00-3-3.87"/><path d="M16 3.13a4 4 0 010 7.75"/></svg>
    </div>
    <div class="stat-content">
      <div class="stat-value"><%= stats.total_conversions || 0 %></div>
      <div class="stat-label">Conversions</div>
    </div>
  </div>
</div>

<% if (offers.length === 0) { %>
  <div class="empty-state">
    <div class="empty-state-icon">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 64px; height: 64px; color: #9CA3AF;">
        <path d="M20.59 13.41l-7.17 7.17a2 2 0 01-2.83 0L2 12V2h10l8.59 8.59a2 2 0 010 2.82z"/><line x1="7" y1="7" x2="7.01" y2="7"/>
      </svg>
    </div>
    <h3>No offers yet</h3>
    <p>Create your first promotional offer to start capturing leads.</p>
    <a href="/admin/marketing/offers/new" class="btn btn-primary">Create Your First Offer</a>
  </div>
<% } else { %>
  <div class="table-container">
    <table class="data-table">
      <thead>
        <tr>
          <th>Offer</th>
          <th>Category</th>
          <th>Status</th>
          <th>Views</th>
          <th>Conversions</th>
          <th>Rate</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% offers.forEach(offer => { %>
          <tr>
            <td>
              <div style="display: flex; align-items: center; gap: 12px;">
                <% if (offer.featured_image) { %>
                  <img src="<%= offer.featured_image %>" alt="" style="width: 48px; height: 48px; border-radius: 8px; object-fit: cover;">
                <% } else { %>
                  <div style="width: 48px; height: 48px; border-radius: 8px; background: linear-gradient(135deg, #0077B6, #00B4D8); display: flex; align-items: center; justify-content: center;">
                    <svg viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" style="width: 24px; height: 24px;"><path d="M20.59 13.41l-7.17 7.17a2 2 0 01-2.83 0L2 12V2h10l8.59 8.59a2 2 0 010 2.82z"/><line x1="7" y1="7" x2="7.01" y2="7"/></svg>
                  </div>
                <% } %>
                <div>
                  <strong><%= offer.title %></strong>
                  <div class="text-muted" style="font-size: 0.8rem;">/offers/<%= offer.slug %></div>
                </div>
              </div>
            </td>
            <td>
              <span class="badge badge-outline"><%= offer.category %></span>
            </td>
            <td>
              <% if (offer.status === 'published') { %>
                <span class="badge badge-success">Published</span>
              <% } else { %>
                <span class="badge badge-secondary">Draft</span>
              <% } %>
            </td>
            <td><%= offer.views || 0 %></td>
            <td><%= offer.conversions || 0 %></td>
            <td>
              <% const rate = offer.views > 0 ? ((offer.conversions / offer.views) * 100).toFixed(1) : 0; %>
              <strong><%= rate %>%</strong>
            </td>
            <td>
              <div class="action-buttons">
                <a href="/offers/<%= offer.slug %>" target="_blank" class="btn btn-sm btn-secondary" title="Preview">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 16px; height: 16px;"><path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
                </a>
                <a href="/admin/marketing/offers/<%= offer.id %>/edit" class="btn btn-sm btn-secondary" title="Edit">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 16px; height: 16px;"><path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                </a>
                <form action="/admin/marketing/offers/<%= offer.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Delete this offer?')">
                  <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 16px; height: 16px;"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/></svg>
                  </button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } %>

<%- include('../../partials/footer') %>
