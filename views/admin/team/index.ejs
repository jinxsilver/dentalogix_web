<%- include('../partials/header') %>

<div class="card">
  <div class="card-header">
    <h2>Team Members</h2>
    <a href="/admin/team/new" class="btn btn-primary">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 18px; height: 18px;"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
      Add Team Member
    </a>
  </div>

  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th>Photo</th>
          <th>Name</th>
          <th>Title</th>
          <th>Category</th>
          <th>Bio Page</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% team.forEach(function(member) { %>
        <tr>
          <td>
            <% if (member.photo) { %>
              <img src="<%= member.photo %>" alt="<%= member.name %>" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;">
            <% } else { %>
              <div style="width: 40px; height: 40px; border-radius: 50%; background: var(--admin-primary); display: flex; align-items: center; justify-content: center; color: #fff; font-weight: 600;"><%= member.name.charAt(0) %></div>
            <% } %>
          </td>
          <td><strong><%= member.name %></strong></td>
          <td><%= member.title %></td>
          <td>
            <% if (member.category === 'dentist') { %>
              <span class="badge badge-danger">Dentist</span>
            <% } else if (member.category === 'executive') { %>
              <span class="badge badge-info">Team Member</span>
            <% } else if (member.category === 'hygienist') { %>
              <span class="badge badge-success">Hygienist</span>
            <% } else { %>
              <span class="badge">Staff</span>
            <% } %>
          </td>
          <td>
            <% if (member.bio_page_enabled) { %>
              <span class="badge badge-success">Enabled</span>
            <% } else { %>
              <span class="badge badge-warning">Disabled</span>
            <% } %>
          </td>
          <td>
            <span class="badge badge-<%= member.status === 'published' ? 'success' : 'warning' %>"><%= member.status %></span>
          </td>
          <td>
            <div class="actions">
              <% if (member.bio_page_enabled && member.slug) { %>
              <a href="/team/<%= member.slug %>" target="_blank" class="btn btn-secondary btn-sm btn-icon" title="View Bio Page">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
              </a>
              <% } %>
              <a href="/admin/team/<%= member.id %>/edit" class="btn btn-secondary btn-sm btn-icon" title="Edit">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
              </a>
              <form action="/admin/team/<%= member.id %>/delete" method="POST" class="delete-form" style="display: inline;">
                <button type="submit" class="btn btn-danger btn-sm btn-icon" title="Delete">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/></svg>
                </button>
              </form>
            </div>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
