<%- include('../partials/header') %>

<div class="card">
  <div class="card-header">
    <h2>Insurance Providers</h2>
    <a href="/admin/insurance/new" class="btn btn-primary">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 18px; height: 18px;"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
      Add Provider
    </a>
  </div>

  <% if (providers.length === 0) { %>
  <div class="card-body">
    <div class="empty-state">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 48px; height: 48px; color: var(--text-muted);"><path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
      <h3>No insurance providers yet</h3>
      <p>Add insurance providers to display them on your website.</p>
      <a href="/admin/insurance/new" class="btn btn-primary">Add Provider</a>
    </div>
  </div>
  <% } else { %>
  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th style="width: 80px;">Logo</th>
          <th>Name</th>
          <th>Website</th>
          <th>Order</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% providers.forEach(function(p) { %>
        <tr>
          <td>
            <% if (p.logo) { %>
              <img src="<%= p.logo %>" alt="<%= p.name %>" style="max-width: 60px; max-height: 40px; object-fit: contain;">
            <% } else { %>
              <div style="width: 60px; height: 40px; background: var(--bg-secondary); border-radius: 4px; display: flex; align-items: center; justify-content: center; color: var(--text-muted); font-size: 0.75rem;">No logo</div>
            <% } %>
          </td>
          <td><strong><%= p.name %></strong></td>
          <td>
            <% if (p.website_url) { %>
              <a href="<%= p.website_url %>" target="_blank" rel="noopener" style="color: var(--color-primary); font-size: 0.875rem;">Visit site</a>
            <% } else { %>
              <span style="color: var(--text-muted);">-</span>
            <% } %>
          </td>
          <td><%= p.display_order %></td>
          <td>
            <span class="badge <%= p.status === 'published' ? 'badge-success' : 'badge-secondary' %>">
              <%= p.status %>
            </span>
          </td>
          <td>
            <div class="actions">
              <a href="/admin/insurance/<%= p.id %>/edit" class="btn btn-secondary btn-sm btn-icon" title="Edit">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
              </a>
              <form action="/admin/insurance/<%= p.id %>/delete" method="POST" class="delete-form" style="display: inline;">
                <button type="submit" class="btn btn-danger btn-sm btn-icon" title="Delete">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/></svg>
                </button>
              </form>
            </div>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <% } %>
</div>

<div class="card" style="margin-top: 1.5rem;">
  <div class="card-header">
    <h2>Tips</h2>
  </div>
  <div class="card-body">
    <ul style="margin: 0; padding-left: 1.25rem; color: var(--text-secondary);">
      <li>Upload logos with transparent backgrounds (PNG) for best results</li>
      <li>Recommended logo size: 200x80 pixels or similar aspect ratio</li>
      <li>Use the "Order" field to control the display sequence (lower numbers appear first)</li>
      <li>If you have more than 5 providers, they will automatically scroll on the homepage</li>
    </ul>
  </div>
</div>

<%- include('../partials/footer') %>
