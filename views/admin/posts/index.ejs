<%- include('../partials/header') %>

<div class="card">
  <div class="card-header">
    <h2>All Blog Posts</h2>
    <a href="/admin/posts/new" class="btn btn-primary">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 18px; height: 18px;"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
      Add New Post
    </a>
  </div>
  
  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Author</th>
          <th>Status</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (posts.length > 0) { %>
          <% posts.forEach(function(post) { %>
          <tr>
            <td><strong><%= post.title %></strong></td>
            <td><%= post.category_name || '—' %></td>
            <td><%= post.author_name || '—' %></td>
            <td>
              <span class="badge badge-<%= post.status === 'published' ? 'success' : 'warning' %>"><%= post.status %></span>
            </td>
            <td><%= new Date(post.created_at).toLocaleDateString() %></td>
            <td>
              <div class="actions">
                <% if (post.status === 'published') { %>
                <a href="/blog/<%= post.slug %>" target="_blank" class="btn btn-secondary btn-sm btn-icon" title="View">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
                </a>
                <% } %>
                <a href="/admin/posts/<%= post.id %>/edit" class="btn btn-secondary btn-sm btn-icon" title="Edit">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                </a>
                <form action="/admin/posts/<%= post.id %>/delete" method="POST" class="delete-form" style="display: inline;">
                  <button type="submit" class="btn btn-danger btn-sm btn-icon" title="Delete">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/></svg>
                  </button>
                </form>
              </div>
            </td>
          </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="6" style="text-align: center; padding: 3rem;">
              <p style="color: var(--admin-text-light);">No blog posts yet. <a href="/admin/posts/new">Create your first post!</a></p>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
