<%- include('../partials/header') %>

<div class="card">
  <div class="card-header">
    <h2>All Services</h2>
    <a href="/admin/services/new" class="btn btn-primary">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 18px; height: 18px;"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
      Add New Service
    </a>
  </div>
  
  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th>Service</th>
          <th>Short Description</th>
          <th>Featured</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% services.forEach(function(service) { %>
        <tr>
          <td><strong><%= service.title %></strong></td>
          <td><%= service.short_description ? service.short_description.substring(0, 60) + '...' : '—' %></td>
          <td><%= service.featured ? '⭐ Yes' : 'No' %></td>
          <td>
            <span class="badge badge-<%= service.status === 'published' ? 'success' : 'warning' %>"><%= service.status %></span>
          </td>
          <td>
            <div class="actions">
              <a href="/services/<%= service.slug %>" target="_blank" class="btn btn-secondary btn-sm btn-icon" title="View">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
              </a>
              <a href="/admin/services/<%= service.id %>/edit" class="btn btn-secondary btn-sm btn-icon" title="Edit">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
              </a>
              <form action="/admin/services/<%= service.id %>/delete" method="POST" class="delete-form" style="display: inline;">
                <button type="submit" class="btn btn-danger btn-sm btn-icon" title="Delete">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/></svg>
                </button>
              </form>
            </div>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
