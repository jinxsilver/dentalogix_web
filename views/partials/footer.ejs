  <footer class="site-footer">
    <div class="container">
      <div class="footer-grid">
        <div class="footer-brand">
          <a href="/" class="logo">
            <% if (settings.footer_logo) { %>
              <img src="<%= settings.footer_logo %>" alt="<%= settings.site_name || 'Dentalogix' %>" class="footer-logo-img" style="max-height: 100px; object-fit: contain;">
            <% } else { %>
              <svg viewBox="0 0 48 48" fill="none" class="dragon-logo">
                <defs>
                  <linearGradient id="dragonGradientFooter" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#D97706"/>
                    <stop offset="100%" style="stop-color:#92400E"/>
                  </linearGradient>
                </defs>
                <path d="M8 28c0-8 4-14 10-16c2-1 4-1 6 0c4 2 8 4 12 3c2 0 3 1 3 3c0 2-1 4-3 5c-2 1-4 1-6 0c0 4-2 8-6 10c-2 1-4 2-6 2c-6 0-10-3-10-7z" fill="url(#dragonGradientFooter)"/>
                <circle cx="14" cy="18" r="2" fill="#FEF3C7"/>
                <path d="M18 8l4-4l-1 6z" fill="url(#dragonGradientFooter)"/>
                <path d="M20 26c0-2 1-4 3-4s3 2 3 4c0 1 0 2-0.5 3l-1 5l-3-2l-1-5c-0.3-1-0.5-1-0.5-1z" fill="#FEF3C7" stroke="#92400E" stroke-width="0.5"/>
                <path d="M30 16c4-2 6-1 8 1c-2 2-4 3-6 3c-1 0-2-2-2-4z" fill="url(#dragonGradientFooter)" opacity="0.7"/>
                <path d="M6 22c-2-1-3-3-2-5c1 1 3 2 4 2c1 1 0 3-2 3z" fill="#F59E0B" opacity="0.8"/>
              </svg>
              <span class="logo-text">Dental<span>ogix</span></span>
            <% } %>
          </a>
          <p><%= settings.about_text || 'Providing exceptional dental care with modern technology and a gentle touch.' %></p>
          <div class="footer-social">
            <% if (settings.facebook) { %>
            <a href="<%= settings.facebook %>" class="social-link" aria-label="Facebook">
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg>
            </a>
            <% } %>
            <% if (settings.instagram) { %>
            <a href="<%= settings.instagram %>" class="social-link" aria-label="Instagram">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="2" width="20" height="20" rx="5"/><path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
            </a>
            <% } %>
            <% if (settings.twitter) { %>
            <a href="<%= settings.twitter %>" class="social-link" aria-label="Twitter">
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/></svg>
            </a>
            <% } %>
          </div>
        </div>
        
        <div class="footer-column">
          <h4>Quick Links</h4>
          <ul class="footer-links">
            <%
              let quickLinks = [];
              try {
                quickLinks = JSON.parse(settings.footer_quick_links || '[]');
              } catch(e) {
                quickLinks = [
                  {label: 'Home', url: '/'},
                  {label: 'About Us', url: '/about'},
                  {label: 'Our Services', url: '/services'},
                  {label: 'Contact', url: '/contact'}
                ];
              }
              quickLinks.forEach(function(link) {
            %>
              <li><a href="<%= link.url %>"><%= link.label %></a></li>
            <% }); %>
          </ul>
        </div>

        <div class="footer-column">
          <h4>Our Locations</h4>
          <% if (settings.footer_location1_name) { %>
          <div class="footer-location">
            <strong><%= settings.footer_location1_name %></strong>
            <% if (settings.footer_location1_address) { %>
              <p><%= settings.footer_location1_address %><% if (settings.footer_location1_city) { %><br><%= settings.footer_location1_city %><% } %></p>
            <% } %>
            <% if (settings.footer_location1_show_phone === 'true' && settings.phone) { %>
              <p><%= settings.phone %></p>
            <% } %>
          </div>
          <% } %>
          <% if (settings.footer_location2_name) { %>
          <div class="footer-location<%= settings.footer_location2_text && settings.footer_location2_text.toLowerCase().includes('coming') ? ' coming-soon-text' : '' %>">
            <strong><%= settings.footer_location2_name %></strong>
            <% if (settings.footer_location2_text) { %>
              <p><%= settings.footer_location2_text %></p>
            <% } %>
            <% if (settings.footer_location2_link_text && settings.footer_location2_link_url) { %>
              <a href="<%= settings.footer_location2_link_url %>"><%= settings.footer_location2_link_text %></a>
            <% } %>
          </div>
          <% } %>
          <% if (settings.footer_location3_name) { %>
          <div class="footer-location">
            <strong><%= settings.footer_location3_name %></strong>
            <% if (settings.footer_location3_text) { %>
              <p><%= settings.footer_location3_text %></p>
            <% } %>
            <% if (settings.footer_location3_link_text && settings.footer_location3_link_url) { %>
              <a href="<%= settings.footer_location3_link_url %>"><%= settings.footer_location3_link_text %></a>
            <% } %>
          </div>
          <% } %>
        </div>

        <div class="footer-column">
          <h4>Hours</h4>
          <div class="footer-contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
            <div>
              <p><%= settings.hours_weekday %><br><%= settings.hours_weekend %></p>
            </div>
          </div>
          <div class="footer-contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
            <div>
              <p><%= settings.email %></p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="footer-bottom">
        <p><%= settings.footer_text %></p>
        <div class="footer-legal">
          <a href="<%= settings.privacy_url || '/privacy' %>">Privacy Policy</a>
          <a href="<%= settings.terms_url || '/terms' %>">Terms of Service</a>
        </div>
      </div>
    </div>
  </footer>
  
  <script src="/js/main.js"></script>
</body>
</html>
