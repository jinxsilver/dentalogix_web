<%- include('../partials/header') %>

<main class="team-member-page">
  <div class="container">
    <div class="team-member-hero">
      <div class="member-photo-large">
        <% if (member.photo) { %>
          <img src="<%= member.photo %>" alt="<%= member.name %>">
        <% } else { %>
          <div class="photo-placeholder">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
          </div>
        <% } %>
      </div>
      <div class="member-intro">
        <span class="section-label">
          <% if (member.category === 'dentist') { %>
            Dentist
          <% } else if (member.category === 'hygienist') { %>
            Dental Hygienist
          <% } else { %>
            Team Member
          <% } %>
        </span>
        <h1><%= member.name %></h1>
        <p class="member-title"><%= member.title %></p>

        <% if (member.specialties) { %>
        <div class="member-specialties">
          <h4>Specialties</h4>
          <div class="specialty-tags">
            <% member.specialties.split(',').forEach(function(specialty) { %>
              <span class="specialty-tag"><%= specialty.trim() %></span>
            <% }); %>
          </div>
        </div>
        <% } %>

        <% if (member.credentials) { %>
        <div class="member-credentials">
          <h4>Credentials</h4>
          <p><%= member.credentials %></p>
        </div>
        <% } %>

        <div class="member-links">
          <% if (member.email) { %>
          <a href="mailto:<%= member.email %>" class="member-link">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
            Email
          </a>
          <% } %>
          <% if (member.linkedin_url) { %>
          <a href="<%= member.linkedin_url %>" target="_blank" rel="noopener noreferrer" class="member-link linkedin">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            LinkedIn
          </a>
          <% } %>
        </div>
      </div>
    </div>

    <% if (member.undergrad_school || member.grad_school) { %>
    <div class="member-education">
      <h2>Education</h2>
      <div class="education-grid">
        <% if (member.grad_school) { %>
        <div class="education-item">
          <div class="education-logo">
            <% if (member.grad_logo) { %>
              <img src="<%= member.grad_logo %>" alt="<%= member.grad_school %> logo">
            <% } else { %>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 10v6M2 10l10-5 10 5-10 5z"/><path d="M6 12v5c0 2 2 3 6 3s6-1 6-3v-5"/></svg>
            <% } %>
          </div>
          <div class="education-details">
            <span class="education-type">Graduate School</span>
            <h4><%= member.grad_school %></h4>
            <% if (member.grad_degree) { %>
            <p><%= member.grad_degree %></p>
            <% } %>
          </div>
        </div>
        <% } %>
        <% if (member.undergrad_school) { %>
        <div class="education-item">
          <div class="education-logo">
            <% if (member.undergrad_logo) { %>
              <img src="<%= member.undergrad_logo %>" alt="<%= member.undergrad_school %> logo">
            <% } else { %>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 10v6M2 10l10-5 10 5-10 5z"/><path d="M6 12v5c0 2 2 3 6 3s6-1 6-3v-5"/></svg>
            <% } %>
          </div>
          <div class="education-details">
            <span class="education-type">Undergraduate</span>
            <h4><%= member.undergrad_school %></h4>
            <% if (member.undergrad_degree) { %>
            <p><%= member.undergrad_degree %></p>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <% } %>

    <div class="member-bio-full">
      <h2>About <%= member.name.split(' ')[0] %></h2>
      <div class="bio-content">
        <%= member.full_bio || member.bio %>
      </div>
    </div>

    <div class="member-cta">
      <h3>Schedule an Appointment</h3>
      <% if (member.category === 'dentist' || member.category === 'hygienist') { %>
      <p>Ready to meet <%= member.name.split(' ')[0] %>? Book your appointment today.</p>
      <% } else { %>
      <p>Ready for the Dentalogix Experience? Book your appointment today.</p>
      <% } %>
      <a href="/contact" class="btn btn-primary btn-lg">Book Appointment</a>
    </div>
  </div>

  <!-- Back to Team -->
  <section class="back-to-team">
    <div class="container">
      <a href="/about" class="back-link">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="19" y1="12" x2="5" y2="12"/><polyline points="12 19 5 12 12 5"/></svg>
        Back to Our Team
      </a>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>
