<%- include('../partials/header') %>

<main class="about-page">
  <div class="container">
    <div class="about-hero">
      <span class="section-label">About Us</span>
      <h1>Your Trusted Partner in Dental Health</h1>
      <p class="lead"><%= settings.about_text %></p>
    </div>

    <div class="about-content">
      <div class="about-images">
        <div class="about-image-main">
          <% if (page && page.hero_image) { %>
            <img src="<%= page.hero_image %>" alt="Our dental practice">
          <% } else { %>
            <div class="image-placeholder">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="M21 15l-5-5L5 21"/></svg>
            </div>
          <% } %>
        </div>
      </div>
      <div class="about-text">
        <h2>Our Story</h2>
        <% if (page && page.content) { %>
          <%- page.htmlContent || page.content %>
        <% } else { %>
          <p>Founded with a vision to transform dental care, our practice has been serving the community for over 15 years. We believe that everyone deserves access to high-quality dental care in a comfortable, welcoming environment.</p>
          <p>Our team of dedicated professionals combines expertise with compassion to deliver outstanding dental care. We stay at the forefront of dental technology and techniques to ensure our patients receive the best possible treatment.</p>
        <% } %>

        <div class="about-features mt-3">
          <div class="about-feature">
            <div class="feature-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 11-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
            </div>
            <div class="feature-text">
              <h4>Our Mission</h4>
              <p>To provide exceptional dental care with compassion and integrity</p>
            </div>
          </div>
          <div class="about-feature">
            <div class="feature-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M8 14s1.5 2 4 2 4-2 4-2"/><line x1="9" y1="9" x2="9.01" y2="9"/><line x1="15" y1="9" x2="15.01" y2="9"/></svg>
            </div>
            <div class="feature-text">
              <h4>Our Vision</h4>
              <p>A community where everyone has a healthy, confident smile</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Team Section - Organized by Category -->
  <section class="team-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Our Team</span>
        <h2>Meet Your Dental Care Experts</h2>
        <p>Our experienced team is dedicated to providing you with personalized, gentle care.</p>
      </div>

      <%
        const providers = [...(teamGrouped.dentists || []), ...(teamGrouped.hygienists || [])];
        if (providers.length > 0) {
      %>
      <!-- Our Providers (Dentists + Hygienists) -->
      <div class="team-category">
        <h3 class="category-title">Our Providers</h3>
        <div class="team-grid">
          <% providers.forEach(function(member) { %>
          <div class="team-card <%= member.bio_page_enabled ? 'has-bio-page' : '' %>">
            <% if (member.bio_page_enabled) { %>
            <a href="/team/<%= member.slug %>" class="team-photo-link">
            <% } %>
              <div class="team-photo">
                <% if (member.photo) { %>
                  <img src="<%= member.photo %>" alt="<%= member.name %>">
                <% } else { %>
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                <% } %>
                <% if (member.bio_page_enabled) { %>
                <div class="photo-overlay">
                  <span>View Full Bio</span>
                </div>
                <% } %>
              </div>
            <% if (member.bio_page_enabled) { %>
            </a>
            <% } %>
            <div class="team-info">
              <% if (member.bio_page_enabled) { %>
              <h3><a href="/team/<%= member.slug %>"><%= member.name %></a></h3>
              <% } else { %>
              <h3><%= member.name %></h3>
              <% } %>
              <p class="team-title"><%= member.title %></p>
              <p class="team-bio"><%= member.bio.substring(0, 200) %><%= member.bio.length > 200 ? '...' : '' %></p>
              <% if (member.credentials) { %>
                <p class="team-credentials"><em><%= member.credentials %></em></p>
              <% } %>
              <% if (member.bio_page_enabled) { %>
              <a href="/team/<%= member.slug %>" class="read-more-link">Read Full Bio →</a>
              <% } %>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
      <% } %>

      <%
        const teamMembers = [...(teamGrouped.executives || []), ...(teamGrouped.staff || [])];
        if (teamMembers.length > 0) {
      %>
      <!-- Team Members (Executives + Staff) -->
      <div class="team-category">
        <h3 class="category-title">Team Members</h3>
        <div class="team-grid">
          <% teamMembers.forEach(function(member) { %>
          <div class="team-card <%= member.bio_page_enabled ? 'has-bio-page' : '' %>">
            <% if (member.bio_page_enabled) { %>
            <a href="/team/<%= member.slug %>" class="team-photo-link">
            <% } %>
              <div class="team-photo">
                <% if (member.photo) { %>
                  <img src="<%= member.photo %>" alt="<%= member.name %>">
                <% } else { %>
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                <% } %>
                <% if (member.bio_page_enabled) { %>
                <div class="photo-overlay">
                  <span>View Full Bio</span>
                </div>
                <% } %>
              </div>
            <% if (member.bio_page_enabled) { %>
            </a>
            <% } %>
            <div class="team-info">
              <% if (member.bio_page_enabled) { %>
              <h3><a href="/team/<%= member.slug %>"><%= member.name %></a></h3>
              <% } else { %>
              <h3><%= member.name %></h3>
              <% } %>
              <p class="team-title"><%= member.title %></p>
              <% if (member.bio) { %>
              <p class="team-bio"><%= member.bio.substring(0, 200) %><%= member.bio.length > 200 ? '...' : '' %></p>
              <% } %>
              <% if (member.credentials) { %>
                <p class="team-credentials"><em><%= member.credentials %></em></p>
              <% } %>
              <% if (member.bio_page_enabled) { %>
              <a href="/team/<%= member.slug %>" class="read-more-link">Read Full Bio →</a>
              <% } %>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
      <% } %>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <h2>Join Our Family of Happy Patients</h2>
      <p>Experience the difference of personalized, compassionate dental care.</p>
      <div class="cta-buttons">
        <a href="/contact" class="btn btn-primary btn-lg">Schedule a Visit</a>
        <a href="/services" class="btn btn-outline btn-lg">View Our Services</a>
      </div>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>
