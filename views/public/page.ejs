<%- include('../partials/header') %>

<main class="about-page">
  <div class="container">
    <div class="about-hero">
      <h1><%= page.title %></h1>
    </div>
    
    <div class="container-narrow" style="margin: 0 auto;">
      <% if (page.hero_image) { %>
        <img src="<%= page.hero_image %>" alt="<%= page.title %>" style="width: 100%; border-radius: 1rem; margin-bottom: 2rem;">
      <% } %>
      
      <div class="post-content">
        <%- page.htmlContent || page.content %>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
