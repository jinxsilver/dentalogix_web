            <svg viewBox="0 0 48 48" fill="none" style="width: 40px; height: 40px;">
              <defs><linearGradient id="grad2b" x1="0%" y1="0%" x2="100%" y2="100%"><stop offset="0%" style="stop-color:#D97706"/><stop offset="100%" style="stop-color:#92400E"/></linearGradient></defs>
              <path d="M12 8 L12 40 L24 40 C36 40 42 32 42 24 C42 16 36 8 24 8 Z" fill="url(#grad2b)"/>
              <path d="M18 14 L18 34 L24 34 C32 34 36 30 36 24 C36 18 32 14 24 14 Z" fill="#FEF3C7"/>
              <circle cx="36" cy="18" r="6" fill="url(#grad2b)"/>
              <circle cx="37" cy="17" r="2" fill="white"/>
              <circle cx="37.5" cy="17" r="1" fill="#1E293B"/>
              <path d="M38 12 L42 8 L40 14 Z" fill="#F59E0B"/>
              <path d="M30 12 C34 8 40 10 38 14" stroke="url(#grad2b)" stroke-width="2" fill="none"/>
              <path d="M22 22 L20 28 L22 34 L24 28 Z" fill="url(#grad2b)"/>
            </svg>
            <span class="logo-text-preview">Dental<span>ogix</span></span>
          </div>
        </div>

        <!-- Option 3: Dragon Wrapped Around Tooth -->
        <div class="logo-option-card" onclick="selectLogo(3)">
          <div class="logo-preview">
            <svg viewBox="0 0 48 48" fill="none" class="logo-svg">
              <defs>
                <linearGradient id="grad3" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#D97706"/>
                  <stop offset="100%" style="stop-color:#92400E"/>
                </linearGradient>
              </defs>
              <!-- Large central tooth -->
              <path d="M24 4 C18 4 14 10 14 16 C14 20 16 24 18 28 L20 42 L24 38 L28 42 L30 28 C32 24 34 20 34 16 C34 10 30 4 24 4 Z" fill="white" stroke="#E5E7EB" stroke-width="1"/>
